@model ABCRetailers_ST10436124.Models.FileUploadModel

@{
    ViewData["Title"] = "Upload Document";
}

<h2><i class="fas fa-upload"></i> Upload Document</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-file-upload"></i> Submit Proof of Payment
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Customer Dropdown -->
                    <div class="form-group mb-3">
                        <label asp-for="CustomerId" class="form-label">Select Customer</label>
                        <select asp-for="CustomerId" class="form-select" id="customerSelect">
                            <option value="">-- Select Customer --</option>
                            @if (Model.Customers != null)
                            {
                                foreach (var customer in Model.Customers)
                                {
                                    <option value="@customer.RowKey">
                                        @customer.Name @customer.Surname (@customer.Username)
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>

                    <!-- Order Dropdown -->
                    <div class="form-group mb-3">
                        <label asp-for="OrderId" class="form-label">Select Order</label>
                        <select asp-for="OrderId" class="form-select" id="orderSelect">
                            <option value="">-- Select Order --</option>
                            @if (Model.Orders != null)
                            {
                                foreach (var order in Model.Orders)
                                {
                                    <option value="@order.RowKey">
                                        @order.OrderId - @order.TotalPrice.ToString("C")
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="OrderId" class="text-danger"></span>
                    </div>

                    <!-- File Upload -->
                    <div class="form-group mb-3">
                        <label asp-for="ProofOfPayment" class="form-label">Choose File</label>
                        <input asp-for="ProofOfPayment" type="file" class="form-control" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" />
                        <span asp-validation-for="ProofOfPayment" class="text-danger"></span>
                        <div class="form-text">Accepted formats: PDF, JPG, PNG, DOC, DOCX (Max size: 10MB)</div>
                        <div id="filePreview" class="mt-2"></div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-upload"></i> Upload File
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-home"></i> Back to Home
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-4">
            <div class="alert alert-info">
                <h6><i class="fas fa-info-circle"></i> Upload Instructions:</h6>
                <ul class="mb-0">
                    <li>Select your proof of payment document</li>
                    <li>Optionally provide Customer and Order for reference</li>
                    <li>File will be stored securely in Azure Storage</li>
                    <li>You will receive a confirmation once upload is complete</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // File upload preview
        const fileInput = document.getElementById('ProofOfPayment');
        const filePreview = document.getElementById('filePreview');

        fileInput.addEventListener('change', function (e) {
            filePreview.innerHTML = ''; // clear previous preview

            const file = e.target.files[0];
            if (file) {
                const fileSize = (file.size / 1024 / 1024).toFixed(2);
                const info = document.createElement('p');
                info.textContent = `Selected file: ${file.name} (${fileSize} MB)`;
                filePreview.appendChild(info);

                if (file.type.startsWith('image/')) {
                    const img = document.createElement('img');
                    img.src = URL.createObjectURL(file);
                    img.style.maxWidth = '200px';
                    img.style.display = 'block';
                    img.classList.add('mt-2');
                    filePreview.appendChild(img);
                }
            }
        });
    </script>
}
